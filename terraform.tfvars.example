# Valores de ejemplo para despliegue en AWS.
# Copia este archivo a "terraform.tfvars" y rellena los valores.
# NO subas el archivo terraform.tfvars a un repositorio público.

region        = "us-east-1"
app_name      = "EB-Dynamo"
env_name      = "eb-dynamo-env"
table_name    = "ContactosCampiclouders"
cors_origin   = "*" # Cambia esto por tu dominio de frontend en producción
instance_type = "t3.micro"

# La variable `platform_arn` ya no es necesaria, Terraform la detecta automáticamente
# con el data source "aws_elastic_beanstalk_solution_stack".

# Máximo número de registros en DynamoDB
max_records = 100  # Cambiar según necesites (50, 100, 500, etc.)

# ============================================================================
# CONFIGURACIÓN DE MONITOREO Y OBSERVABILIDAD
# ============================================================================

# Email para recibir notificaciones de alarmas (opcional)
# Recibirás un email de confirmación de AWS que debes aceptar
alert_email = "tu-email@ejemplo.com"

# Umbrales para las alarmas (ajusta según tus necesidades)
alarm_5xx_threshold              = 10   # Número de errores 5xx en 10 minutos
alarm_latency_threshold          = 3.0  # Latencia P99 en segundos
alarm_cpu_threshold              = 80   # Porcentaje de uso de CPU
alarm_dynamodb_errors_threshold  = 5    # Número de errores en DynamoDB
alarm_app_error_threshold        = 20   # Errores en logs de aplicación
log_retention_days               = 7    # Días de retención de logs